                    "value" : {
                        "type" : "string",
                        "title" : "Value"
                    }
                }
            }
        },
        "credits" : {
            "type" : "array",
            "title" : "Credits",
            "format" : "table",
            "items" : {
                "type" : "object",
                "title" : "Credit",
                "properties" : {
                    "username" : { "type" : "string", "title" : "Username" },
                    "role" : { "type" : "string", "title" : "Role" }
