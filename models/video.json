                "properties" : {
                    "src" : { "type" : "string", "title" : "Source URL" },
                    "type" : {
                        "type" : "string",
                        "title" : "MIME Type",
                        "enum" : [
                            "video/mp4",
                            "video/mov",
                            "video/webm",
                            "audio/wav",
                            "audio/mp3",
                            "soundcloud/id",
                            "youtube/id",
                            "vimeo/id",
                            "rtmp/mp4",
                            "application/x-mpegURL"
                        ]
                    },
                    "res" : { "type" : "number", "title" : "Size" }
                }
            }
        },
        "params" :{
            "type" : "array",
            "title" : "Custom parameters",
            "format" : "table",
            "items" : {
                "type" : "object",
                "title" : "Parameter",
                "properties" : {
                    "name" : {
                        "type" : "string",
                        "title" : "Name"
