{
    "title" : "Video",
    "model_name" : "video",
    "description" : "",
    "type" : "object",
    "properties" : {
        "_id" : {
          "type" : "string"  ,
          "options" : {
            "hidden" : true
          }
        },
        "section" : {
            "type": "string",
            "title" : "Section",
            "enum" : ["","label","lcr","lens","lsutv","halls"],
            "options" : {
                "enum_titles" : ["General","Label","LCR","Lens","LSUTV","Hall Media"]
            }
        },
        "public": {
            "type": "boolean",
            "format" : "checkbox",
            "title" : "Public"
        },
        "title": {
            "type": "string",
            "title" : "Title",
            "propertyOrder" : 1
        },
        "tags" :{
            "type" : "string",
            "title" : "Tags (space seperated)"
        },
        "show_id" : {
            "type" : "string",
            "title" : "Show"
        },
        "poster": {
            "type": "string",
            "title" : "Poster URL",
            "format" : "url"
        },
        "date" : {
            "type" : "string",
            "title" : "Date posted",
            "format" : "date"
        },
        "live_or_vod" : {
            "type" : "string",
            "title" : "Live/VOD",
            "default" : "vod",
            "enum" : ["live","vod"],
            "options" : {
                "enum_titles" : ["Live", "VOD"]
            }
        },
        "type": {
            "type": "string",
            "title" : "Type",
            "propertyOrder" : 2
        },
        "sources": {
            "type" : "array",
            "title" : "Sources",
            "format" : "table",
            "items" :   {
