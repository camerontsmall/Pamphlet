{
    "title" : "Video",
    "model_name" : "video",
    "description" : "Pamphlet video object",
    "type" : "object",
    "properties" : {
        "id" : {
          "type" : "integer"  
        },
        "section" : {
            "type": "string"
        },
        "public": {
            "type": "boolean"
        },
        "title": {
            "type": "string"
        },
        "poster": {
            "type": "string"
        },
        "datetime" : {
            "type" : "string",
            "format" : "datetime"
        },
        "type": {
            "type": "string"
        },
        "sources": {
            "type" : "array",
            "title" : "Sources",
            "type" : "table",
            "items" :   {
                "type" : "object",
                "title" : "Source",
                "properties" : {
                    "src" : { "type" : "string", "title" : "Source URL" },
                    "type" : {
                        "type" : "string",
                        "title" : "MIME Type",
                        "enum" : [
                            "video/mp4",
                            "video/mov",
                            "video/webm",
                            "audio/wav",
                            "audio/mp3",
                            "audio/soundcloud",
                            "video/youtube",
                            "video/vimeo",
                            "rtmp/mp4",
                            "application/x-mpegURL"
                        ]
                    },
                    "res" : { "type" : "number", "title" : "Size" }
                }
            }
        },
        "credits" : {
            "type" : "array",
            "title" : "Credits",
            "type" : "table",
            "items" : {
                "type" : "object",
                "title" : "Credit",
                "properties" : {
                    "username" : { "type" : "string", "title" : "Username" },
                    "role" : { "type" : "string", "title" : "Role" }
                }
            }
        },
        "description": {
            "type": "string"
        }
    },
    "required" : ["id","section","title"]
}
